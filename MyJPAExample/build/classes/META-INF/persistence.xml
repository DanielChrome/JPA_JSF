<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="DevMediaPersistenceUnit" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.com.devmedia.jpa.entity.People</class>
    <class>br.com.devmedia.jpa.entity.PeopleCP</class>
    <class>br.com.devmedia.jpa.entity.PeopleInfo</class>
    <class>br.com.devmedia.jpa.entity.Address</class>
    <class>br.com.devmedia.jpa.entity.Group</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/jpaFullExample"/>
      <property name="javax.persistence.jdbc.password" value="jpa"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.user" value="jpa"/>
    </properties>
  </persistence-unit>
</persistence>
